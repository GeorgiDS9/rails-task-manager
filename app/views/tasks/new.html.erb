<h1>New Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>
<button type="submit" class="btn btn-primary">Create Task></button>

<p>
  <%= link_to "Back to the list", task_path(@task), method: :index %>
</p>
